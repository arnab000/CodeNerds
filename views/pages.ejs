<%- include ("includes/header") %>
<html>
<head>
	<title>CodeNerds</title>

</head>
<body>
	<div class="theme-layout">
		<div class="container-fluid pdng0">
			<div class="row merged">
				<div class="offset-md-3 col-md-6">
					<div class="login-reg-bg">
						<div class="log-reg-area sign">
							<h2 class="log-title">Codeforces Handle</h2>

							<form onsubmit="return Submisson_count(this);">

								<div class="form-group">
									<input type="name" required name="Handle" />
									<label class="control-label">Codeforces Handle</label><i class="mtrl-select"></i>
								</div>

								
								
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script>
		function Submisson_count(form) {
			form.submit.setAttribute("disabled", "disabled");
			form.submit.innerHTML = "<span>Loading...</span>";
			

			var ajax = new XMLHttpRequest();
		

			ajax.onreadystatechange = function() {
				if (this.readyState == 4 && this.status == 200) {
					form.submit.removeAttribute("disabled");
					form.submit.innerHTML = "<span>Login</span>";

					var response = JSON.parse(this.responseText);

					
				}
			};

			ajax.send(new FormData(form));
			return false;
			
		}
	</script>
<%- include ("includes/footer") %>
</body>

</html>